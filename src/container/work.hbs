{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Still boostering towards..)
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link href=company.url text=company.name blank=true noLine=true}}
                            {{else}}
                            <b>
                                {{company.name}}
                            </b>
                            {{/if}}
                        </div>

                        <br>
                        <br>
                        <div>
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link href=url text=name blank=true noLine=true}}</div>

                                <br>

                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <br>

                                <div>
                                    <em>Project stacks ({{stacksAmount}}) </em>
                                </div>
                                <br>

                                <ul>
                                    {{#each stacks}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>
                                <br>

                                <div>
                                    <em>Project awards ({{awardsAmount}}) </em>
                                </div>
                                <br>

                                <ul>
                                    {{#each awards}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>

                            </li>
                            {{/each}}
                        </ul>
                    </li>

                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}

</div>

